<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
           	<solid
           	    android:color="@color/PrimaryDark"
           	    />
           	<corners
                android:radius="3dp" />
            <padding
                android:left="20dp"
                android:top="8dp"
                android:right="20dp"
                android:bottom="8dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#FFA500"
                android:startColor="#FF0000"
                android:angle="270" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="20dp"
                android:top="8dp"
                android:right="20dp"
                android:bottom="8dp" />
        </shape>
    </item>
    
    <!-- This is if the button is permanently pressed -->
    <item android:state_selected="true" >
        <shape>
           	<solid
           	    android:color="@color/PrimaryDark"
           	    />
           	<corners
                android:radius="3dp" />
            <padding
                android:left="20dp"
                android:top="8dp"
                android:right="20dp"
                android:bottom="8dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <solid
                android:color="@color/Primary"/>
            <corners 
                android:radius="3dp"/>
            <padding
                android:left="20dp"
                android:top="8dp"
                android:right="20dp"
                android:bottom="8dp" />
        </shape>
    </item>
</selector>